extends layout

block content
  div#wrapper
    section#sidebar

      header
        h1= "Remote Logger"

      div.search-container
        input.search

      ul#logsessions

    section#console
      header
      div#log
        ul.messages

  script(type="text/template", id="logsession-item-view-template")
    | <div class='info'> 
    |   <h1> <%= userName %> </h1>
    |   <h2> <%= appName %> </h2>
    |   <div class='logmessage-count'>0</div>
    | </div>

  script(type="text/template", id="logmessage-view-template")
    | <% messages.forEach(function( message ) { %>
    |   <span> <%= JSON.stringify(message.value) %> <span>
    | <% }) %>


  